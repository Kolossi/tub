{
    "manifest_version": 3,
    "name": "Tub - The Ultimate Browser",
    "version": "0.0.2",
    "permissions": [
        "tabs",
        "webNavigation",
        "webRequest",
        "nativeMessaging",
        "declarativeNetRequest"
    ],
    "action": {
        "default_icon": {
          
          "16": "images/tub16.png",
          "32": "images/tub32.png",
          "48": "images/tub48.png",
          "64": "images/tub64.png",
          "96": "images/tub96.png",
          "128": "images/tub128.png"
        },
        "default_title": "Tub - The Ultimate Browser",
        "default_popup": "status.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
        }
    ],
    "background": {
        "service_worker": "background-loader.js"
      }
}
